//--------------------------------------------------------------------------------------
// Structs
//--------------------------------------------------------------------------------------
struct VSIn
{
	float3	Pos	: POSITION;
	float3	Nrm	: NORMAL;
};

//--------------------------------------------------------------------------------------
// Constant buffer
//--------------------------------------------------------------------------------------
cbuffer cbPerObject
{
	matrix g_worldViewProj;
};

//--------------------------------------------------------------------------------------
// Depth/shadow pass
//--------------------------------------------------------------------------------------
float4 main(VSIn input) : SV_POSITION
{
	return mul(float4(input.Pos, 1.0), g_worldViewProj);
}
